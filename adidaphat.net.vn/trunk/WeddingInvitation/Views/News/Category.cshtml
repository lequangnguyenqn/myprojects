@model List<WeddingInvitation.Core.Models.ContentManagement.NewsItem>
@{
    ViewBag.Title = "Danh sách tin";
}
<div class="item-page">
    <span style="color:#8b8b8b;font-size:24px;border-bottom:1px solid #CCC;line-height:32px;">Danh Sách Tin</span>
    <br />
    <br>
    <div class="wrapper faq">
        @foreach (var item in Model)
        {
            <div class="margin-bot">
                <span style="font-size:16px;" class="color-1">
                    <a style="color: #CC6666; text-decoration: none;" href="@Url.Action("", "News", new { id = item.NewsItemId })">@item.Title</a>
                </span>
                <text>@item.Short</text>
                <a href="@Url.Action("", "News", new { id = item.NewsItemId })">chi tiết</a>
            </div>
        }
    </div>
</div>